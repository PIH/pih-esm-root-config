{
  "name": "pih-esm-root-config",
  "description": "The single-spa root config for PIH",
  "scripts": {
    "test": "jest",
    "typescript": "tsc --resolveJsonModule --esModuleInterop",
    "start": "webpack-dev-server",
    "start-https": "webpack-dev-server --https",
    "lint": "eslint . --ext ts",
    "build": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pih/pih-esm-root-config.git"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && concurrently -n lint,test,typescript 'npm run lint' 'npm test' 'npm run typescript'"
    }
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pih/pih-esm-root-config/issues"
  },
  "homepage": "https://github.com/pih/pih-esm-root-config#readme",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@openmrs/esm-root-config": "^1.1.2",
    "babel-eslint": "^11.0.0-beta.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.0.1",
    "eslint-config-important-stuff": "^1.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.1.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "@openmrs/esm-module-config": "^1.1.0",
    "@types/jest": "^24.0.15",
    "@types/systemjs": "^0.20.6",
    "single-spa": "^4.3.5"
  }
